generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  favorites Favorite[]
  createdAt DateTime @default(now())
}

model Monster {
  id          String   @id @default(uuid())
  name        String
  type        String
  element     String
  description String
  image       String
  favorites   Favorite[]
}

model Favorite {
  userId    String
  monsterId String

  user    User    @relation(fields: [userId], references: [id])
  monster Monster @relation(fields: [monsterId], references: [id])

  @@id([userId, monsterId])
}
